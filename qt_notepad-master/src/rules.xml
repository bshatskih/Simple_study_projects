                <pattern value="\bfor\b"/>
                <pattern value="\bfrom\b"/>
                <pattern value="\bglobal\b"/>
                <pattern value="\bif\b"/>
                <pattern value="\bimport\b"/>
                <pattern value="\bin\b"/>
                <pattern value="\bis\b"/>
                <pattern value="\blambda\b"/>
                <pattern value="\bNone\b"/>
                <pattern value="\bnonlocal\b"/>
                <pattern value="\bnot\b"/>
                <pattern value="\bor\b"/>
                <pattern value="\bpass\b"/>
                <pattern value="\braise\b"/>
                <pattern value="\breturn\b"/>
                <pattern value="\bTrue\b"/>
                <pattern value="\btry\b"/>
                <pattern value="\bwhile\b"/>
                <pattern value="\bwith\b"/>
                <pattern value="\byield\b"/>
                <format foreground="#CC7832" font_weight="400"/>
            </rule>
        </syntax>
    </syntaxes>
</settings>
